@model ShopDunk.Models.ViewModel.DetailProductVM

@{
    Layout = null;
}
<head>
    <link rel="stylesheet" href="~/Content/Home.css" />
    <script src="https://kit.fontawesome.com/3e21e075ef.js" crossorigin="anonymous"></script>
</head>﻿
<html>
<body>
    <h3 style="margin-left:3px;">Gợi ý phụ kiện đi kèm</h3>
    <div class="container">
        <div class="row d-flex">
            @foreach (var pro in Model.RelatePro)
            {
                <div class="equipment mx-auto col-xl-3 col-lg-4 col-sm-6 bg-white" style="width:310px;border-radius: 11px; margin: 16px 6px; padding: 21px 11px 0 11px;">
                    <a class="row" href="@Url.Action("DetailProduct", "DetailProductVM", new { id = pro.ProID })">
                        <img class="container img-fluid" src="@Url.Content(pro.ProImage)" style="width:251px;height:261px;" />
                        <p class="name_equipment">@pro.ProName</p>
                        <p class="coin_of_equipment"><span style="color: rgb(0,102,204); font-weight: bold">@string.Format("{0:N0}", pro.PriceReduce) đ</span>  <del style="padding:0 2px 0 15px;">@string.Format("{0:N0}", pro.Price)đ </del>-@pro.DiscountPercent%</p>
                    </a>
                </div>
            }
        </div>
    </div>
</body>
</html>