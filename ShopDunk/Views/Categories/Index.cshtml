@model IEnumerable<ShopDunk.Models.Category>

@{
    ViewBag.Title = "Index";
}
<h1 style="color:darkgreen;padding:10px;text-align:center;background-color:lawngreen;border-radius:10px;">Quản lí loại hàng</h1>
<style>
    .edit {
        border: 1px solid black;
        padding: 10px;
        text-decoration: none;
    }
</style>

<table class="table">
    <tr>
        <th>
            Mã Loại
        </th>
        <th>
            Tên Loại
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr style="border:2px solid gray">
            <td>
                @Html.DisplayFor(modeItem => item.CatID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NameCate)
            </td>
            <td>
                <a href="@Url.Action("Edit", new { id = item.CatID })" style="border: 1px solid black; padding: 5px; text-decoration: none;border-radius:5px;color:black">Sửa</a>
                <a href="@Url.Action("Delete", new { id = item.CatID })" style="border: 1px solid black; padding: 5px; text-decoration: none; border-radius: 5px; color: black ">xóa</a>
            </td>
        </tr>
    }
</table>
<p>
    <a class="bg-danger" href="@Url.Action("Create")" style="border: 1px solid red; padding: 5px; text-decoration: none;border-radius:5px;color:white">Thêm mới</a>
</p>
